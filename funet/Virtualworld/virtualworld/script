	WAIT_RDV	0
	RETURN

# Affichage d'un premier objet, le T!
LAB	"SCRIPT T"
	SET_POS	  -100,0,4000
	SET_SPANG 0,0,0	
	SET_SPEED 0,0,-80	
	SET_ANGLE 0,0,0

	WAIT	50
	SET_SPEED 0,0,0	
	WAIT	20
	SET_SPANG 0,1,2	
	WAIT	40
	VIT_OBJ	2
	WAIT	10
	SET_SPEED 0,4,0	
	WAIT	50
	WAIT	50
	SET_SPEED 20,0,40
	WAIT	50
	SET_SPEED 20,20,100
	WAIT	50
	RETURN

LAB	"SCRIPT L"
	SET_POS	  100,0,4000
	SET_SPANG 0,0,0	
	SET_SPEED 0,0,-80	
