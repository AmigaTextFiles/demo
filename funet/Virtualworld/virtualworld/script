	SET_ANGLE	0,0,200
	SET_SPEED	0,0,30
	SET_SPANG	0,0,-2
	WAIT	30

	SET_SPEED	0,0,-40
	SET_SPANG	0,0,0
	SELECT	"POIPOI CLAV"
	SET_SPEED	0,0,0
	SET_SPANG	0,0,0
	WAIT	20
