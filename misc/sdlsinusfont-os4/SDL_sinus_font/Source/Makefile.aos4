CC = gcc
LD = gcc
CFLAGS = -mcrt=newlib `sdl-config --cflags` 
LDFLAGS = -mcrt=newlib `sdl-config --libs` -mcrt=newlib -lSDL_image -lpng -ljpeg -lz -lSDL_ttf -lfreetype -lz -lsdl -lauto -lm
RM   = /bin/rm -f
OBJS = sinusfont.o 
PROG = sinusfont

.PHONY: clean
all: $(PROG)
$(PROG): $(OBJS)
	$(LD) -o $(PROG) $(OBJS) $(LDFLAGS)
sinusfont.o: sinusfont.c
	$(CC) $(CFLAGS) -c sinusfont.c
clean:
	$(RM) *~ $(OBJS) $(PROG)
