dnl Process this file with autoconf to produce a configure script.
AC_INIT(README)

dnl Setup for automake
AM_INIT_AUTOMAKE(PTC-demos, 1.0)

dnl Check for tools

AC_PROG_CXX

dnl Check for SDL
AC_ARG_ENABLE(ptc,
[  --enable-ptc            Use PTC instead of SDL for video [default=no]],
              , enable_ptc=no)
if test x$enable_ptc = xyes; then
    CFLAGS="$CFLAGS -I/usr/local/include/ptc"
    LIBS="$LIBS -lptc -lHermes"
else
    SDL_VERSION=1.0.1
    AM_PATH_SDL($SDL_VERSION,
                :,
	        AC_MSG_ERROR([*** SDL version $SDL_VERSION not found!])
    )
    CFLAGS="$CFLAGS $SDL_CFLAGS -DSDL"
    LIBS="$LIBS $SDL_LIBS"
fi
CXXFLAGS="$CFLAGS"

# Finally create all the generated files
AC_OUTPUT([Makefile])
