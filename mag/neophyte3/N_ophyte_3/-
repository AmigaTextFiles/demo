;           Fonts
;  -------------------------
;
  (
      (makedir (tackon DEST-DIR "Néophyte/Fonts"))
      (set DEST4 (tackon DEST-DIR "Néophyte/Fonts"))
)


(copyfiles
   (all)
   (help @copyfiles-help)
   (source "Fonts/")
   (dest DEST4)
)

(complete 84)
 
;
