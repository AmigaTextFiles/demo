(complete 85)

;
;  -------------------------
;           Fanz
;  -------------------------

  (
      (makedir (tackon DEST-DIR "Néophyte"))
      (set DEST-DIR (tackon DEST-DIR "Néophyte"))
)


(copyfiles
   (infos)
   (help @copyfiles-help)
   (source "--")
   (dest DEST-DIR)
)

(complete 97)

(copyfiles
   (prompt "MedPlayer.library")
   (help "Non rien...")
   (source "Libs/MedPlayer.library")
   (dest "Libs:")

)

(complete 99)


(set #welcome           (cat "\n\n\n\nOh !   Oh ! Encore 1%\nMais c'est quoi ??\n\n\n\n\n\n\n\n\n\n"))

(message #welcome)
